{# home page critical CSS #}
{% if function('is_front_page')  %}
	{% include 'app/css/critical-home.css' %}

{# page builder template critical CSS #}
{% elseif post._wp_page_template == "template-page-builder.php" %}
	{% include 'app/css/critical-page-builder.css' %}

{# contact template critical CSS #}
{% elseif post._wp_page_template == "template-contact.php" %}
	{% include 'app/css/critical-contact.css' %}


{# docs template critical CSS #}
{% elseif post._wp_page_template == "template-docs.php" %}
	{% include 'app/css/critical-docs.css' %}


{# insights landing critical CSS #}
{% elseif post.post_name == "insights"%}
	{% include 'app/css/critical-insights-landing.css' %}

{# cs detail critical CSS #}
{% elseif function('is_singular') and post.post_type == "casestudy" %}
	{% include 'app/css/critical-cs-detail.css' %}

{% elseif function('is_post_type_archive', 'casestudy') %}
	{% include 'app/css/critical-cs-landing.css' %}

{# insights detail critical CSS #}
{% elseif function('is_singular') and post.post_type == "post" or post.post_type == "events" %}
	{% include 'app/css/critical-single-post.css' %}

{% elseif function('is_archive') %}
	{% include 'app/css/critical-archive.css' %}

{% elseif function('is_404') %}
	{% include 'app/css/critical-404.css' %}

{# job detail critical CSS #}
{% elseif function('is_singular') %}
	{% include 'app/css/critical-single-post.css' %}

{% else %}
	{% include 'app/css/critical-archive.css' %}
{% endif %}
