<head>
    <meta charset="{{site.charset}}" />

    <meta name="description" content="{{site.description}}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="pingback" href="{{site.pingback_url}}" />
    <link rel="shortcut icon" href="{{site.theme.link}}/app/img/icon/favicon.ico" type="image/png" />

    <!-- FB share data -->
    {% if post.thumbnail %}
		{% set shareImg = post.thumbnail %}
	{% else %}
		{% set shareImg = site.theme.link~'/app/img/logo/logo@2x.png' %}
    {% endif %}
    <meta property="fb:app_id" content="1533019366991645" />
    <meta property="og:image" content="{{shareImg}}"/>

    <style type="text/css">

       {% include 'inc/perf/critical-stylesheet-loader.twig' %}
       {#{{ source('app/css/critical.css') }} #}
        .wf-loading .b-page-title {
          visibility: hidden;
        }
    </style>


    <script>
		{{ source('app/js/vendor/loadCSS.js')}}
	</script>

	{% include 'inc/perf/async-stylesheet-loader.twig' %}

	<script>
	    WebFontConfig = {
	        // google: {
	        //   families: ['Source+Sans+Pro:300,400,600,400italic:latin']
	        // },
	        // typekit: {
	        //     id : 'zez7aaw'
	        // }
	    };

	    (function() {
	        var wf = document.createElement('script');
	        wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
	          '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
	        wf.type = 'text/javascript';
	        wf.async = 'true';
	        var s = document.getElementsByTagName('script')[0];
	        s.parentNode.insertBefore(wf, s);
	    })();
	</script>

    {{function('wp_head')}}
